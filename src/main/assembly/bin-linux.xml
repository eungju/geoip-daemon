<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin-linux</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>geoip-daemon</baseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory></outputDirectory>
            <directory>src/main/deployment/production</directory>
            <includes>
                <include>conf/geoip-daemon.properties</include>
                <include>conf/logback.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>src/main/bin</directory>
            <includes>
                <include>jsvc</include>
                <include>geoip-daemon</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
    </fileSets>
</assembly>